@model EmployeEditionViewModel
@{
   
     Layout = "_LayoutAdministration";
     ViewData["Title"] = "Liste employes";
}
<div class="container">
     <div class="row">
          <div class="col-12">
          
          <div class="card card-purple">
               <div class="card-header">
                    <i class="fas fa-minus-octagon"></i>
                Suppression Employe
               </div>
               <div class="card-body">
                   <p class="text-danger">@ViewData["ErrorMessage"]</p>
                  <div class="row">
                       <dt class="col-sm-2">Nom</dt>
                       <dd class="col-sm-10"> @Html.DisplayFor(item => item.Nom)</dd>
                       <dt class="col-sm-2">Matricule</dt>
                       <dd class="col-sm-10">  @Html.DisplayFor(item => item.Matricule)</dd>
                       <dt class="col-sm-2">E-mail</dt>
                       <dd class="col-sm-10"> @Html.DisplayFor(item => item.Email)</dd>
                  </div>
                   <h3>Confirmer la suppression ?</h3>
               </div>
               <div class="card-footer">
                     <form class="form-horizontal" method="post" action="DeleteConfirme">
                          <input type="hidden" asp-for="Id"/>
                        @Html.AntiForgeryToken()  
                          <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Supprimer</button>
                           <a asp-action="Edit" class=" btn-default btn-lg" asp-area="Administration" asp-route-id=@Model.Id><i class="fas fa-ban"></i>Annuler</a>
                     <a asp-action="Index" class=" btn-info btn-lg " asp-area="Administration"><i class="fas fa-address-card"></i>Liste Employes</a>
                     </form>
                  
                    
               </div>
          </div>
      
     </div>
     </div>
</div>
