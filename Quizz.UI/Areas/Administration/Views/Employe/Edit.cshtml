@model EmployeEditionViewModel
@{
   
     Layout = "_LayoutAdministration";
     ViewData["Title"] = "Modification";
}
<div class="container">
    <div class="row">
        <div class="col-md">
            <div class="card card-outline card-primary">
                <div class="card-header">
                  <div class="card-title">
                   <h2>Page Modification</h2>
                </div>
                </div>
                
                <div class="card-tools">
                    <div class="btn-group">
                       <a asp-action="Index" class=" btn-info btn-lg" asp-area="Administration"><i class="fas fa-address-card"></i>Liste Employes</a>
                       <a asp-action="Index" class=" btn-danger btn-lg" asp-area="Administration"><i class="fas fa-adress-card"></i>Supprimer</a>
                    </div>
                </div>
                <div class="car-body">
                    <div class="row">
                        <div class="col-5 col-sm-3">
                            <div class=" nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
                              <a class="nav-link active" id="vert-tabs-home-tab" data-toggle="pill" href="#vert-tabs-home" role="tab" aria-controls="vert-tabs-home" aria-selected="true">Employe</a>
                               <a class="nav-link" id="vert-tabs-profile-tab" data-toggle="pill" href="#vert-tabs-profile" role="tab" aria-controls="vert-tabs-profile" aria-selected="false">Profiles</a>
                            </div>
                        </div>
                        <div class="col-7 col-sm-9">
                            <div class="tab-content" id="vert-tabs-tabContent">
                                <div class="tab-pane text-left fade show active" id="vert-tabs-home" role="tabpanel" aria-labelledby="vert-tabs-home-tab">
                                 @await Html.PartialAsync("_Edit",Model)
                                </div>
                                <div class="tab-pane fade" id="vert-tabs-profile" role="tabpanel" aria-labelledby="vert-tabs-profile-tab">
                                     @await Html.PartialAsync("_ProfileListe",Model)
                                </div>
                            </div>
                        </div>
                    </div>
               
                </div>
            </div>
        </div>
    </div>
</div>
